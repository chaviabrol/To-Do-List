<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <% newListItems.forEach(function(newitems){ %>
      <form action="/delete" method="POST">
        <div class="item">
          <input type="checkbox" name ="checkbox" value="<%= newitems._id %>" onchange="this.form.submit()">
          <p><%=  newitems.name  %></p>
        </div>
        <input type="hidden" value="<%= listTitle %>" name="listname"></input>
      </form>
      <% }); %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="submitlist" value="<%= listTitle %>">+</button>
      </form>
  </div>

<%- include("footer") -%>
